{
  "name": "@samithahansaka/formless-zod",
  "version": "0.1.0",
  "description": "Zod schema bridge for Universal Form Adapter",
  "keywords": [
    "form",
    "react",
    "typescript",
    "zod",
    "validation",
    "schema"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samithahansaka/formless.git",
    "directory": "packages/zod"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@samithahansaka/formless-core": "*",
    "@tanstack/react-form": "1.27.7"
  },
  "peerDependencies": {
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16",
    "zod": "^3.22.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
